@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Fullname
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Online/Offline
                    </th>
                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>
                            @employee.FullName
                        </td>
                        <td>
                            @employee.Age
                        </td>
                        <td>
                            @employee.Position
                        </td>
                        <td>
                            @if (employee.IsActive)
                            {
                                <div style="width:30px; height:30px; background-color:green; border-radius:50% "></div>
                            }
                            else
                            {

                                <div style="width:30px; height:30px; background-color:red; border-radius:50% "></div>
                            }

                        </td>
                        <td style="text-align: center;">
                            <form style="display: inline-block;" asp-action="SetStatus" asp-route-id="@employee.Id" method="post">
                                <button type="submit" class="btn btn-outline-success">On / Off</button>
                            </form>
                            <a asp-action="Detail" asp-route-id="@employee.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                            <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                            <form style="display: inline-block;" asp-action="Delete" asp-route-id="@employee.Id" method="post">
                                <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

